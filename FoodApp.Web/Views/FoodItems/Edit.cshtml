@model FoodApp.Domain.Domain.FoodItem

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white text-center">Edit</h1>

<h4 class="text-white text-center">Food-item</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-white">
                <label asp-for="FoodItemName" class="control-label">Food-item Name</label>
                <input asp-for="FoodItemName" class="form-control" />
                <span asp-validation-for="FoodItemName" class="text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="FoodItemDescription" class="control-label">Food-item Description</label>
                <input asp-for="FoodItemDescription" class="form-control" />
                <span asp-validation-for="FoodItemDescription" class="text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="FoodItemImage" class="control-label">Food-item Image</label>
                <input asp-for="FoodItemImage" class="form-control" />
                <span asp-validation-for="FoodItemImage" class="text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="RestaurantId" class="control-label">Restaurant</label>
                <select asp-for="RestaurantId" class="form-control" asp-items="ViewBag.Restaurants"></select>
                <span asp-validation-for="RestaurantId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="margin-top:10px;">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:10px;" class="d-flex justify-content-center">
    <a asp-action="Index" class="btn btn-light text-black">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}