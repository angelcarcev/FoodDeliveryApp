@model FoodApp.Domain.DTO.AddToCartDto

<div class="container mt-5">
    <h1 class="mb-4">Add to Cart</h1>
    <form method="post" asp-action="AddToCartConfirmed">
        <input type="hidden" asp-for="FoodId" value="@Model.FoodId" class="form-control" />

        <div class="form-group row">
            <label asp-for="FoodName" class="col-sm-2 col-form-label">Food</label>
            <div class="col-sm-10">
                <input asp-for="FoodName" class="form-control" readonly />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mt-3">
            <label asp-for="Quantity" class="col-sm-2 col-form-label">Quantity</label>
            <div class="col-sm-10">
                <input asp-for="Quantity" type="number" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mt-4">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-success">Add To Cart</button>
            </div>
        </div>
    </form>
</div>

<style>
    .form-group {
        margin-bottom: 1rem;
    }
</style>

