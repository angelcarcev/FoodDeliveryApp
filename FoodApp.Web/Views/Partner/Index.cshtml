@model List<FoodApp.Domain.Domain.Restaurant>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-color:azure; font-family:Arial, sans-serif;">

    <h1 style="color text-align:center; font-size:36px;">Partner's BookStore</h1>

    <div class="container" style="margin-top:20px;">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4" style="margin-bottom:20px;">
                    <div class="card text-dark" style="margin-bottom:20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); width: 23rem; height: 25rem">
                        <div class="card-body" style="background-color:#FFF0DC; padding:20px;">
                            <img class="card-img-top" src="@item.RestaurantImage" alt="Card image cap" style="width:319px; height:250px;">

                            <h5 class="card-title" style="font-weight:bold;">
                                @Html.DisplayFor(modelItem => item.RestaurantName)
                            </h5>
                            <p class="card-text" >
                                @Html.DisplayFor(modelItem => item.RestaurantAddress)
                            </p>
                         
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>