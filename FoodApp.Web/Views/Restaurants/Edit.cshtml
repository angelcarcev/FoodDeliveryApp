                <label asp-for="RestaurantImage" class="control-label"></label>
                <input asp-for="RestaurantImage" class="form-control" />
                <span asp-validation-for="RestaurantImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantAddress" class="control-label"></label>
                <input asp-for="RestaurantAddress" class="form-control" />
                <span asp-validation-for="RestaurantAddress" class="text-danger"></span>
