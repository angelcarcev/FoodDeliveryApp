@model FoodApp.Domain.Domain.Restaurant

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white text-center">Create</h1>

<h4 class="text-center text-white">Restaurant</h4>
<hr />
<div class="row text-white d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RestaurantName" class="control-label"></label>
                <input asp-for="RestaurantName" class="form-control" />
                <span asp-validation-for="RestaurantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantDescription" class="control-label"></label>
                <input asp-for="RestaurantDescription" class="form-control" />
                <span asp-validation-for="RestaurantDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantImage" class="control-label"></label>
                <input asp-for="RestaurantImage" class="form-control" />
                <span asp-validation-for="RestaurantImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantAddress" class="control-label"></label>
                <input asp-for="RestaurantAddress" class="form-control" />
                <span asp-validation-for="RestaurantAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:15px" class="d-flex justify-content-center">
    <a asp-action="Index" class="btn btn-light text-black">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
