@model List<FoodApp.Domain.Domain.Order>


<div class="container">
    <div class="row">
        <a asp-controller="Orders" asp-action="ExportAllOrders" class="btn btn-light text-dark">Export Orders</a>
    </div>

    <div class="row m-5">
        <table class="table table-bordered">
            <thead class="thead-dark text-white">
                <tr class="table-dark">
                    <th>
                        #
                    </th>
                    <th>
                        Customer details
                    </th>
                    <th>
                        Number of products
                    </th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model[i];
                    <tr class="table-warning">
                        <td>@(i + 1)</td>
                        <td>
                            @item.Owner.UserName
                        </td>

                        <td>
                            @item.FoodItemsInOrder.Count()
                        </td>
                        <td>
                            |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light btn-outline-dark">View Order</a>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>