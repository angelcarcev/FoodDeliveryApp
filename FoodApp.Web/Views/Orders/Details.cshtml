@model FoodApp.Domain.Domain.Order

<div class="container">
    <div class="text-white text-center" style="font-size:40px">
        <p>Order for @Model.Owner.Firstname</p>
    </div>

    @for(int i=0;i<Model.FoodItemsInOrder.Count(); i++)
    {
        var item = Model.FoodItemsInOrder.ElementAt(i).FoodItem;
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

            <div class="card" style="width: 20rem; height: 30rem">
                <img class="card-img-top" src="@item.FoodItemImage" alt="Card image cap" style="width:319px;height:250px">
                <div class="card-body text-dark">
                    <h5 class="card-title">@item.FoodItemName</h5>
                    <p class="card-text">@item.FoodItemDescription</p>
                    <h6>Price: @item.Price</h6>
                </div>

            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
     <div>

      <a asp-action="Index" class="btn btn-light text-black" >Back to Orders</a>

      </div>

</div>